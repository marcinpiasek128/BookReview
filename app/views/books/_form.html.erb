<%= simple_form_for @book, :html => { :multipart => true } do |f| %>
  <%= select_tag(:category_id, options_for_select(@categories), :prompt => "Wybierz gatunek" ) %>
  <%= f.input :title, label: "Tytuł książki" %>
  <%= f.input :description, label: "Opis" %>
  <%= f.input :author, label: "Autor" %>
  <%= f.file_field :book_img, label: "Zdjęcie" %>
  <%= f.button :submit, :class => 'btn-custom2' %>
<% end %>